.modal-dialog
  .modal-content
    form#g-folder-edit-form.modal-form(role="form")
      .modal-body
        .form-group
          label.control-label(for="g-name") 名称
          input#g-name.input-sm.form-control(type="text", placeholder="请输入文件夹名称")
        .g-validation-failed-message
      .modal-footer
        button.back.btn.btn-small.btn-default(data-dismiss="modal") 取消
          i.icon-cancel-circled
        button.buttion.g-save-folder.btn.btn-small.btn-primary(type="submit")
          if (folder)
            i.icon-floppy
            | 保存
          else
            i.icon-feather
            | 新建
