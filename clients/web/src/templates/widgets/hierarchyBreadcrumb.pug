- var idx = 0
each obj in links
  li
    a.g-breadcrumb-link(g-index=idx)
      if obj.resourceName === 'user'
        i.icon-user
      else if obj.resourceName === 'collection'
        i.icon-home
      = obj.name()
  - idx += 1

if current
  li.active
    if current.resourceName === 'user'
      i.icon-user
    else if current.resourceName === 'collection'
      i.icon-home
    = current.name()

if descriptionText
  a.g-description-preview= descriptionText

.pull-right
  .g-child-count-container.hide
    .g-subfolder-count-container(title='个文件夹')
      i.icon-archive
      .g-subfolder-count

    if idx > 0
      .g-item-count-container(title='个图像')
        i.icon-docs
        .g-item-count

  if idx > 0
    .g-level-up-button-container
      a.g-hierarchy-level-up(title="返回上一层")
        i.icon-reply
