.modal-dialog
  .modal-content
    form#g-collection-edit-form.modal-form(role="form")
      .modal-body
        .form-group
          label.control-label(for="g-name") 病理图像库名称
          input#g-name.input-sm.form-control(type="text", placeholder="请输入病理图像库名称")
        .g-validation-failed-message
      .modal-footer
        button.back.btn.btn-small.btn-default(data-dismiss="modal") 取消
          i.icon-cancel-circled
        button.button.g-save-collection.btn.btn-small.btn-primary(type="submit")
          if (create)
            i.icon-feather
            | 新建
          else
            i.icon-floppy
            | 保存
