.modal-dialog
  .modal-content
    form#g-login-form.modal-form(role="form")
      .modal-body
        if enablePasswordLogin
          .form-group
            label.control-label(for="g-login") 用户名或邮箱
            input#g-login.input-sm.form-control(type="text", placeholder="输入用户名或邮箱")
          .form-group
            label.control-label(for="g-password") 密码
            input#g-password.input-sm.form-control(type="password", placeholder="输入密码")
          #g-login-otp-group.form-group.hidden
            label.control-label(for="g-login-otp") Two-factor code
            input#g-login-otp.input-sm.form-control(
              type='text', minlength=6, maxlength=6, placeholder="Your 6-digit two-factor authentication code, if enabled")
          .g-validation-failed-message
          .g-bottom-message
            if registrationPolicy !== 'closed'
              | 还没有账户?
              a.g-register-link  注册
              |  |
            a.g-forgot-password  忘记密码?
      .modal-footer
        button.back.btn.btn-default(data-dismiss="modal") 关闭
          i.icon-cancel-circled
        button.button#g-login-button.btn.btn-primary(type="submit")
          i.icon-login
          |  登录
